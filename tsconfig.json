{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@lib/*": ["./lib/*"],
      "@hooks/*": ["./lib/hooks/*"],
      "@typings/*": ["./lib/typings/*"]
    }
  }
}
